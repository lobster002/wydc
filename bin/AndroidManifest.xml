<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sky.wydc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <!-- Wifi 及网络相关的全部权限 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.sky.wydc.config.CustomApplcation"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.sky.wydc.ui.WelcomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sky.wydc.ui.MainActivity"
            android:launchMode="singleTask" />
        <activity android:name="com.sky.wydc.ui.GuideActivity" />
        <activity android:name="com.sky.wydc.ui.LoginActivity" />
        <activity android:name="com.sky.wydc.ui.DescripeActivity" />
        <activity android:name="com.sky.wydc.ui.RegisterActivity" />
        <activity android:name="com.sky.wydc.ui.FeedBackActivity" />
        <activity
            android:name="com.sky.wydc.ui.ShowActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity android:name="com.sky.wydc.ui.DishesDetaliActivity" />
        <activity android:name="com.sky.wydc.ui.CartActivity" />
        <activity android:name="com.sky.wydc.ui.HistoryCartActivity" />
        <activity android:name="com.sky.wydc.ui.UserInfoActivity" />
        <activity android:name="com.sky.wydc.ui.mealDetail" />
        <activity android:name="com.sky.wydc.ui.Change" />
    </application>

</manifest>